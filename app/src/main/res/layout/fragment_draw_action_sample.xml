<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_onboarding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".drawactions.DrawActionSampleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewInstruction"
            android:layout_gravity="top|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:minLines="2"
            android:fontFamily="@font/opendys"
            android:padding="10dp"
            android:text="Sample"
            android:textSize="22sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonStart"
            android:layout_margin="20dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@android:color/white"
            app:rippleColor="@android:color/white"
            app:strokeWidth="3dp"
            android:padding="6dp"
            android:fontFamily="@font/opendys_bold"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:cornerRadius="20sp"
            android:layout_gravity="center"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Start"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageSampleDrawing"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.rm.freedrawview.FreeDrawView
        android:id="@+id/freeDrawView"
        app:paintColor="@color/colorPrimaryDark"
        app:paintWidth="3dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="100dp"
        android:visibility="visible" />
</FrameLayout>